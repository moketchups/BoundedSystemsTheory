{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Demerzel KernelResult",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intent",
    "confidence",
    "require_confirmation",
    "confirmation_prompt",
    "clarification_questions",
    "reasoning_trace",
    "raw_text",
    "ts"
  ],
  "properties": {
    "intent": {
      "type": "string",
      "enum": ["PING", "LED_ON", "LED_OFF", "TIME_QUERY", "SLEEP", "UNKNOWN"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "require_confirmation": { "type": "boolean" },
    "confirmation_prompt": {
      "type": ["string", "null"]
    },
    "clarification_questions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "reasoning_trace": {
      "type": "array",
      "items": { "type": "string" }
    },
    "raw_text": { "type": "string" },
    "ts": { "type": "number" }
  }
}

