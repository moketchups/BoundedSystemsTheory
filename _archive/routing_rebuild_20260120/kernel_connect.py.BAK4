from __future__ import annotations

"""
kernel_connect.py

Deterministic intent "kernel" (no LLM).
This is the authoritative classifier that decides which Intent a user utterance maps to.

If the kernel does not know an intent, it MUST return UNKNOWN + clarification questions.
Your log shows it currently only offers: time, sleep.
This file expands the known intents to include: ping, led on/off, time, sleep.
"""

from dataclasses import dataclass
from enum import Enum
from typing import List, Optional
import re


class Intent(str, Enum):
    UNKNOWN = "unknown"
    PING = "ping"
    LED_ON = "led_on"
    LED_OFF = "led_off"
    TIME_QUERY = "time"
    SLEEP = "sleep"


@dataclass
class KernelResult:
    intent: Intent
    confidence: float
    requires_confirmation: bool = False
    confirmation_prompt: Optional[str] = None
    clarification_questions: Optional[List[str]] = None


def kernel_result_to_json_str(result: KernelResult) -> str:
    # Lightweight, stable representation for logging/debug
    cq = result.clarification_questions or []
    return (
        "{"
        f"intent={result.intent.value!r}, "
        f"confidence={result.confidence:.2f}, "
        f"requires_confirmation={result.requires_confirmation}, "
        f"confirmation_prompt={result.confirmation_prompt!r}, "
        f"clarification_questions={cq!r}"
        "}"
    )


def validate_kernel_result(result: KernelResult) -> None:
    # Minimal contract checks so failures are loud
    if not isinstance(result, KernelResult):
        raise TypeError("KernelResult must be a KernelResult dataclass instance")
    if not isinstance(result.intent, Intent):
        raise TypeError("KernelResult.intent must be an Intent")
    if result.intent == Intent.UNKNOWN:
        if not result.clarification_questions:
            raise ValueError("UNKNOWN intent must include clarification_questions")


def _norm(text: str) -> str:
    t = (text or "").strip().lower()
    t = re.sub(r"\s+", " ", t)
    return t


def run_kernel(text: str) -> KernelResult:
    """
    Deterministic classifier.

    Notes:
    - Confirmation is required for hardware actions (LED on/off) by default.
    - Time/Sleep/Ping are safe; no confirmation required.
    """
    t = _norm(text)

    if not t:
        return KernelResult(
            intent=Intent.UNKNOWN,
            confidence=0.0,
            clarification_questions=[
                "Say one of: ping, led on, led off, time, sleep."
            ],
        )

    # Exact-ish matches first
    if t in {"ping"}:
        return KernelResult(intent=Intent.PING, confidence=0.95)

    if t in {"time", "what time is it", "what time is it?", "tell me the time"}:
        return KernelResult(intent=Intent.TIME_QUERY, confidence=0.92)

    if t in {"sleep", "go to sleep"}:
        return KernelResult(intent=Intent.SLEEP, confidence=0.92, requires_confirmation=True, confirmation_prompt="Confirm sleep mode? (yes/no)")

    # LED commands (common variants)
    led_on_patterns = {
        "led on", "light on", "turn on the light", "turn the light on", "turn on led", "ledon"
    }
    led_off_patterns = {
        "led off", "light off", "turn off the light", "turn the light off", "turn off led", "ledoff"
    }

    if t in led_on_patterns:
        return KernelResult(
            intent=Intent.LED_ON,
            confidence=0.90,
            requires_confirmation=True,
            confirmation_prompt="Confirm LED ON? (yes/no)",
        )

    if t in led_off_patterns:
        return KernelResult(
            intent=Intent.LED_OFF,
            confidence=0.90,
            requires_confirmation=True,
            confirmation_prompt="Confirm LED OFF? (yes/no)",
        )

    # Looser contains matches (still deterministic)
    if "led" in t and "on" in t:
        return KernelResult(
            intent=Intent.LED_ON,
            confidence=0.78,
            requires_confirmation=True,
            confirmation_prompt="Confirm LED ON? (yes/no)",
        )

    if "led" in t and "off" in t:
        return KernelResult(
            intent=Intent.LED_OFF,
            confidence=0.78,
            requires_confirmation=True,
            confirmation_prompt="Confirm LED OFF? (yes/no)",
        )

    # Unknown -> clarify with the full supported set
    return KernelResult(
        intent=Intent.UNKNOWN,
        confidence=0.10,
        clarification_questions=[
            "Say one of: ping, led on, led off, time, sleep."
        ],
    )
